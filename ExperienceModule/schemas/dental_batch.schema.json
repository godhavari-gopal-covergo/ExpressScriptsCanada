{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://covergo.com/schemas/experience/dental-batch.schema.json",
  "title": "ESC Dental Feed Batch",
  "type": "object",
  "required": ["feedName", "batchType"],
  "properties": {
    "feedName": {
      "type": "string"
    },
    "batchType": {
      "type": "string",
      "enum": ["file_header", "provider", "client", "file_trailer"]
    },
    "header": {
      "anyOf": [
        { "$ref": "#/$defs/recordPayload" },
        { "type": "null" }
      ]
    },
    "details": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/recordPayload"
      },
      "default": []
    },
    "trailer": {
      "anyOf": [
        { "$ref": "#/$defs/recordPayload" },
        { "type": "null" }
      ]
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "null"]
      },
      "default": {}
    }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "batchType": { "const": "file_header" }
        }
      },
      "then": {
        "required": ["header"]
      }
    },
    {
      "if": {
        "properties": {
          "batchType": { "const": "file_trailer" }
        }
      },
      "then": {
        "required": ["trailer"]
      }
    },
    {
      "if": {
        "properties": {
          "batchType": { "enum": ["provider", "client"] }
        }
      },
      "then": {
        "required": ["header", "trailer"],
        "properties": {
          "details": {
            "minItems": 0
          }
        }
      }
    }
  ],
  "$defs": {
    "recordPayload": {
      "type": "object",
      "required": ["recordType", "description", "fields"],
      "properties": {
        "recordType": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "fields": {
          "type": "object",
          "additionalProperties": {
            "type": ["string", "null"]
          }
        }
      },
      "additionalProperties": false
    }
  }
}

